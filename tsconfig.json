{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "may-ui": ["components/index.tsx"],
      "may-ui/es/*": ["components/*"]
    },
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true 
  },
  "exclude": ["node_modules", "lib", "es"]
}
